# Agentic Service Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# vLLM Configuration
# =============================================================================
VLLM_ENDPOINT=http://192.168.6.10:8002
VLLM_MODEL=Qwen/Qwen3-32B-FP8

# =============================================================================
# API Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=9510
API_KEY=your_secure_api_key_here

# CORS Configuration
ALLOWED_ORIGINS=*

# File Upload Configuration
MAX_FILE_SIZE_MB=50

# =============================================================================
# Language Configuration
# =============================================================================
DEFAULT_LANGUAGE=Chinese
SUPPORTED_LANGUAGES=Chinese,English
AUTO_DETECT_LANGUAGE=true

# =============================================================================
# Storage Configuration
# Choose one of the following storage backends:
# =============================================================================

# Option 1: External Directories (Quick setup - Development)
STORAGE_BACKEND=file
AGENTIC_DATA_DIR=.data
AGENTIC_TEMP_DIR=.tmp_uploads

# Option 2: PostgreSQL Database (Production ready)
# STORAGE_BACKEND=database
# DATABASE_URL=postgresql://agentic_user:secure_password_change_me@localhost:5432/agentic_service

# Option 3: S3-Compatible Storage (Enterprise)
# STORAGE_BACKEND=s3
# S3_ENDPOINT=localhost:9000
# S3_ACCESS_KEY=your_access_key
# S3_SECRET_KEY=your_secret_key
# S3_BUCKET=agentic-files
# S3_REGION=us-east-1
# S3_SECURE=false

# Option 4: Redis for Caching (Optional)
# CACHE_BACKEND=redis
# REDIS_URL=redis://localhost:6379

# =============================================================================
# Database Configuration
# =============================================================================
DB_ECHO=false
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# PostgreSQL Connection Pool
POSTGRES_PASSWORD=secure_password_change_me
POSTGRES_USER=agentic_user
POSTGRES_DB=agentic_service
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# MinIO Configuration (if using S3-compatible storage)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123

# =============================================================================
# Streaming Configuration
# =============================================================================
STREAM_CHAR_BY_CHAR=true
FORCE_SMALL_CHUNKS=true
NETWORK_STREAMING_OPTIMIZED=true
DEBUG_STREAMING=false

# Request Timeout
AGENTIC_REQUEST_TIMEOUT=30

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# Security Configuration
# =============================================================================
SECRET_KEY=your_secret_key_here_change_this_in_production
ENCRYPTION_KEY=your_encryption_key_here_change_this_in_production

# =============================================================================
# Backup Configuration
# =============================================================================
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# =============================================================================
# Monitoring Configuration
# =============================================================================
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# Network Proxy Configuration (for environments behind corporate firewall)
# Uncomment and configure if you need proxy to connect to external services
# =============================================================================
# HTTP_PROXY=http://192.168.105.71:11789
# HTTPS_PROXY=http://192.168.105.71:11789
# NO_PROXY=127.0.0.1,localhost,*.local

# Git/GitHub Proxy Configuration (if different from HTTP proxy)
# GIT_PROXY_COMMAND=proxy-command
# ALL_PROXY=socks5://proxy.company.com:1080

