# Proxy configuration for Docker builds
# Copy this file and update with your actual proxy settings

# HTTP Proxy for apt-get and pip during Docker build
export HTTP_PROXY="http://192.168.105.71:11789"
export HTTPS_PROXY="http://192.168.105.71:11789"
export NO_PROXY="127.0.0.1,localhost,192.168.6.0/24,*.local"

# Additional proxy settings for Docker
export DOCKER_BUILDKIT=1
export DOCKER_BUILD_ARGS="--build-arg HTTP_PROXY=$HTTP_PROXY --build-arg HTTPS_PROXY=$HTTPS_PROXY --build-arg NO_PROXY=$NO_PROXY"

# Usage instructions:
# 1. Copy this file and update with your proxy settings
# 2. Source the file: source proxy.env
# 3. Build with proxy: ./docker-build-with-proxy.sh -p build
# 4. Or use the original script: ./docker-build.sh build
